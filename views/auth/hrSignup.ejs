<%- include("../common/metadata.ejs") %>
    <%- include("../common/header.ejs") %>

        <h1 class="text-center mt-4" style="font-weight: 800;">HR - Signup</h1>
        <div id="signupForm" class="border border-1 rounded-3 mx-auto my-5" style="width: 450px;">
            <form method="POST" action="/signup/hr">
                <div class="my-3 px-3">
                    <label for="name" class="form-label">First name:</label>
                    <input name="firstName" type="text" class="form-control rounded-0 shadow-none">
                </div>
                <div class="my-3 px-3">
                    <label for="name" class="form-label">Last name:</label>
                    <input name="lastName" class="form-control rounded-0 shadow-none">
                </div>
                <div class="my-3 px-3">
                    <label for="name" class="form-label">Email:</label>
                    <input name="email" class="form-control rounded-0 shadow-none">
                </div>
                <div class="my-3 px-3">
                    <label for="name" class="form-label">Mobile</label>
                    <input name="mobile" class="form-control rounded-0 shadow-none">
                </div>
                <div class="my-3 px-3">
                    <label for="name" class="form-label">Website</label>
                    <input name="website" class="form-control rounded-0 shadow-none">
                </div>
                <div class="my-3 px-3">
                    <label for="name" class="form-label">Company Name:</label>
                    <input name="companyName" class="form-control rounded-0 shadow-none">
                </div>
                <div class="my-3 px-3">
                    <label for="name" class="form-label">Company Address:</label>
                    <input name="companyAddress" class="form-control rounded-0 shadow-none">
                </div>

                <div class="my-3 px-3">
                    <label for="name" class="form-label">City:</label>
                    <input name="city" class="form-control rounded-0 shadow-none">
                </div>
                <div class="my-3 px-3">
                    <label for="name" class="form-label">State:</label>
                    <input name="state" class="form-control rounded-0 shadow-none">
                </div>
                <div class="my-3 px-3">
                    <label for="name" class="form-label">Enter Password:</label>
                    <input name="password" type="password" class="form-control rounded-0 shadow-none">
                </div>
                <div class="my-3 px-3">
                    <label for="name" class="form-label">Confirm password:</label>
                    <input name="confirmPassword" type="password" class="form-control rounded-0 shadow-none">
                </div>
                <div class="m-3">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1"><small>By checking it you will accept
                            our <a href="#">terms and conditions</small></a></label>
                </div>
                <center><button type="submit" class="btn btn-outline-dark btn-block border-1 rounded-0 my-3 "
                        style="width: 91%;">Submit</button></center>
            </form>
        </div>


        <%- include("../common/footer.ejs") %>

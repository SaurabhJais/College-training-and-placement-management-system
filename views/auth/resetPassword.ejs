<%- include("../common/metadata.ejs") %>
    <%- include("../common/header.ejs") %>

        <div class="border border-1 mx-auto my-5 col-md-4 col-10" style="height: 550px;">
            <h3 class="m-5 fw-bolder">Reset Password</h3>
            <b>
                <p class="mx-5">Don't worry, just enter your email address and we will setup a new password in no time!
                </p>
            </b>
            <form id="forgotPwd" method="POST" action="/reset-password">
                <label class="form-label mx-5 fw-bold mt-3">Enter password:</label>
                <input type="password" name="password" class="form-control w-75 mx-5 mt-2 shadow-none rounded-0" />
                <label class="form-label mx-5 fw-bold mt-3">Renter password:</label>
                <input type="password" name="confirmPassword"
                    class="form-control w-75 mx-5 mt-2 shadow-none rounded-0" />
                <button type="submit"
                    class="mx-5 btn-primary border-0 rounded-0 shadow-none px-4 py-2 mt-5">Submit</button>
            </form>
        </div>


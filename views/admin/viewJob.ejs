<%- include("../common/metadata.ejs") %>
    <%- include("../common/header.ejs") %>


        <h1 class="text-center mt-5">Job Details of</h1>
        <h1 class="text-center my-5">
            <%= details.jobTitle %>
        </h1>

        <div class="w-50 d-block mx-auto my-5">
            <% for(let x in details) { %>
                <div class="border d-flex p-3">
                    <div class="fw-bold  w-100">
                        <%= x %>
                    </div>
                    <div class=" w-100">
                        <%= details[x] %>
                    </div>
                </div>
                <% } %>
        </div>


        <% if(details.status=="pending" ) { %>

            <div id="approveBtnDiv" class="text-center my-5"><button onclick="approveJob()"
                    class="btn btn-primary rounded-pill py-3 px-5"
                    style="font-weight: 900; box-shadow: 0 1px 3px 0 rgb(60 64 67 / 30%), 0 4px 8px 3px rgb(60 64 67 / 15%);">Approve</button>
            </div>
            <% } %>


                <%- include("../common/metadatabottom.ejs") %>